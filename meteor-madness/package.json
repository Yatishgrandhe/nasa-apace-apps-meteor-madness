{
  "name": "meteor-madness",
  "version": "0.1.0",
  "private": true,
  "engines": {
    "node": ">=18.17.0",
    "npm": ">=9.0.0"
  },
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build",
    "start": "next start",
    "start:node": "node server.js",
    "start:pm2": "pm2 start ecosystem.config.js --env production",
    "stop:pm2": "pm2 stop meteor-madness",
    "restart:pm2": "pm2 restart meteor-madness",
    "logs:pm2": "pm2 logs meteor-madness",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
    "type-check": "tsc --noEmit",
    "build:analyze": "ANALYZE=true next build",
    "start:prod": "NODE_ENV=production next start"
  },
  "dependencies": {
    "@supabase/ssr": "^0.7.0",
    "@tailwindcss/postcss": "^4.1.14",
    "framer-motion": "^12.23.22",
    "lucide-react": "^0.544.0",
    "next": "15.5.4",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "tailwindcss": "^4.1.14"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "autoprefixer": "^10.4.16",
    "eslint": "^9",
    "eslint-config-next": "15.5.4",
    "postcss": "^8.4.31",
    "typescript": "^5"
  },
  "optionalDependencies": {
    "pm2": "^5.3.0"
  }
}
